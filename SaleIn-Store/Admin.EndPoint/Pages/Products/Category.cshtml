@page
@model SaleInAdmin.Pages.Products.CategoryModel
@{
}

<style>
    .hiddenRow {
        padding: 0 !important;
    }
</style>
<!--  BEGIN CONTENT AREA  -->
<div id="content" class="main-content">
    <div class="layout-px-spacing">

        <div class="page-header">
            <div class="page-title">
                <h3>گروه کالا ها</h3>
            </div>
        </div>

        <div class="row layout-top-spacing" id="cancel-row">

            <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
                <div class="widget-content widget-content-area br-6">
                    <div class="text-center">
                        <button onclick="addModal()" class="btn btn-success ">افزودن گروه جدید</button>
                    </div>
                    <div class="table-responsive mb-4 mt-4">
                        <table id="zero-config" class="table table-hover table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>نام</th>
                                    <th> وضعیت </th>
                                    <th> گروه اصلی </th>
                                    <th class="no-content"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.List)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>
                                            @if (item.Status == false)
                                            {
                                                <span class="text text-danger">غیرفعال</span>
                                            }
                                            else
                                            {
                                                <span class="text text-success">فعال</span>
                                            }
                                        </td>
                                        <td>
                                            @item.Sub
                                        </td>


                                        <td>
                                            <button class="btn btn-warning btn-rounded btn-sm">ویرایش</button>
                                            <button class="btn btn-danger btn-rounded btn-sm">حذف</button>
                                        </td>
                                    </tr>


                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>



<div class="modal fade" id="add-category" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="width:700px !Important">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="exampleModalLabel">  افزودن گروه جدید</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                </button>
            </div>
            <div class="modal-body">
                <div class="widget-content">
                    <form method="post" class="needs-validation" novalidate action="javascript:void(0);">
                        <div class="form-row">
                            <div class="col-md-6 mb-4">
                                <label for="validationCustom01">نام گروه <span class="text-danger">*</span></label>
                                <input type="text" class="form-control basic" id="validationCustom01" placeholder="نام گروه" required>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label for="code">کد گروه <span class="text-danger">*</span></label>
                                <input type="text" class="form-control basic" id="code" placeholder="کد گروه" required>
                            </div>


                        </div>

                        <div class="form-row">
                            <div class="col-md-6 mb-4">
                                <label for="Group">گروه اصلی  </label>
                                <select type="text" class="form-control pb-5" id="Group" asp-items="@(new SelectList(Model.SelectList,"Id","Name"))" placeholder="وضعیت" value="شاپ" required>
                                    <option value="0">-- گروه اصلی --</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label for="validationCustom02"> وضعیت <span class="text-danger">*</span></label>
                                <select type="text" class="form-control pb-5" id="validationCustom02" placeholder="وضعیت" value="شاپ" required>
                                    <option value="true">فعال</option>
                                    <option value="false"> غیر فعال</option>
                                </select>
                            </div>
                        </div>

                    </form>


                </div>
            </div>
            <div class="modal-footer">
                <button class="btn" data-dismiss="modal"><i class="flaticon-cancel-12"></i> انصراف</button>
                <button type="submit" id="submit" class="btn btn-primary">ذخیره</button>
            </div>
        </div>
    </div>
</div>
<!--  END CONTENT AREA  -->
@section Scripts
{

    <script src="~/plugins/select2/custom-select2.js"></script>

    <script>

       
        function addModal() {
            $("#add-category").modal("show");
        }
        
    

        $("#submit").on('click', function (evn) {
            evn.preventDefault();
            debugger
            var group = $("#Group").val();
            var  code = parseInt($("#code").val());

            if (group === "0") {
                if (code > @Model.MainCodeCount ) {
                    notify("top center", "کد گروه کالا باید @Model.MainCodeCount رقمی باشد", "error")
                }

            } else {
                if (code > @Model.SubCodeCount ) {
                    notify("top center", "کد زیر گروه کالا باید @Model.SubCodeCount رقمی باشد", "error")
                }
            }


        })



    
    </script>




    <script>
        $('#zero-config').DataTable({
            "oLanguage": {
                "oPaginate": { "sPrevious": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-right"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>', "sNext": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>' },
                "sInfo": "صفحه _PAGE_ از _PAGES_",
                "sSearch": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>',
                "sSearchPlaceholder": "جستجو کنید...",
                "sLengthMenu": "نتایج :  _MENU_",
            },
            "stripeClasses": [],
            "lengthMenu": [7, 10, 20, 50],
            "pageLength": 7
        });
    </script>
}
