@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model             SaleInWeb.Pages.TestModel
@{
   
}

<div class="col-lg-12 layout-spacing">
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4>انتخاب  2 کوچک</h4>
                </div>
            </div>
        </div>
        <div class="widget-content widget-content-area">
            <p> استفاده از <code>data('select2')</code> تابع برای بدست آوردن ظرف انتخاب 2.</p>
            <select class="form-control form-small">
                <option selected="selected">نارنجی</option>
                <option>سفید</option>
                <option>بنفش</option>
            </select>

            <div class="code-section-container">

                <button class="btn toggle-code-snippet"><span>HTML</span></button>

            </div>
        </div>
    </div>


    <div id="fs2Placeholder" class="col-lg-12 layout-spacing">
        <div class="statbox widget box box-shadow">
            <div class="widget-header">
                <div class="row">
                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                        <h4>مکان نگهدار</h4>
                    </div>
                </div>
            </div>
            <div class="widget-content widget-content-area">
                <p>گزینه تنظیم را اعمال کنید <code>placeholder</code> گزینه.</p>
                <select class="placeholder js-states form-control">
                    <option>انتخاب کنید...</option>
                    <option value="one"> اول </option>
                    <option value="two"> دوم </option>
                    <option value="three"> سوم </option>
                    <option value="four">چهارم</option>
                    <option value="five">پنجم</option>
                </select>


            </div>
        </div>
    </div>

    <div id="fs2Tagging" class="col-lg-12 layout-spacing">
        <div class="statbox widget box box-shadow">
            <div class="widget-header">
                <div class="row">
                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                        <h4>برچسب زدن با جعبه های انتخاب چند ارزش</h4>
                    </div>
                </div>
            </div>
            <div class="widget-content widget-content-area">
                <p> تنظیم <code>tags: true</code> برای تبدیل 2 انتخاب در حالت Tag.</p>
                <select class="form-control tagging" multiple="multiple">
                    <option>نارنجی</option>
                    <option>سفید</option>
                    <option>بنفش</option>
                </select>

            </div>
        </div>
    </div>
</div>

<script src="~/plugins/select2/custom-select2.js"></script>